@model AirplaneModelVM

<div class="container-fluid">
    <div class="row mb-4">
        <h2 class="text-decoration-underline">@(Model.AirplaneModel.Id != 0 ? "Обновить" : "Создать") модель самолёта</h2>
    </div>
    <div class="row">
        <form method="post" class="container-fluid">
            <input asp-for="AirplaneModel.Id" hidden />
            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="AirplaneModel.Name" class="form-label"></label>
                    <input asp-for="AirplaneModel.Name" class="form-control mb-1" />
                    <span asp-validation-for="AirplaneModel.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="AirplaneModel.CompanyId" class="form-label"></label>
                    <select asp-for="@Model.AirplaneModel.CompanyId" asp-items="@Model.CompanyList" class="form-control form-select mb-1">
                        <option disabled selected>Выберите компанию</option>
                    </select>
                    <span asp-validation-for="AirplaneModel.CompanyId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="AirplaneModel.NumberOfFClassSeats" class="form-label"></label>
                    @if (Model.AirplaneModel.Id != 0) {
                        <input asp-for="AirplaneModel.NumberOfFClassSeats" class="form-control mb-1" disabled/>
                    }
                    else
                    {
                        <input asp-for="AirplaneModel.NumberOfFClassSeats" class="form-control mb-1" />
                    }
                    <input asp-for="AirplaneModel.NumberOfFClassSeats" class="form-control mb-1" />
                    <span asp-validation-for="AirplaneModel.NumberOfFClassSeats" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="AirplaneModel.NumberOfCClassSeats" class="form-label"></label>
                    @if (Model.AirplaneModel.Id != 0)
                    {
                        <input asp-for="AirplaneModel.NumberOfCClassSeats" class="form-control mb-1" disabled />
                    }
                    else
                    {
                        <input asp-for="AirplaneModel.NumberOfCClassSeats" class="form-control mb-1" />
                    }
                    <span asp-validation-for="AirplaneModel.NumberOfCClassSeats" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="AirplaneModel.NumberOfSClassSeats" class="form-label"></label>
                    @if (Model.AirplaneModel.Id != 0)
                    {
                        <input asp-for="AirplaneModel.NumberOfSClassSeats" class="form-control mb-1" disabled />
                    }
                    else
                    {
                        <input asp-for="AirplaneModel.NumberOfSClassSeats" class="form-control mb-1" />
                    }
                    <span asp-validation-for="AirplaneModel.NumberOfSClassSeats" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label asp-for="AirplaneModel.TypeOfFlightRangeId" class="form-label"></label>
                    <select asp-for="@Model.AirplaneModel.TypeOfFlightRangeId" asp-items="@Model.TypeOfFlightRangeList" class="form-control form-select  mb-1">
                        <option disabled selected>Выберите тип дальности полёта</option>
                    </select>
                    <span asp-validation-for="AirplaneModel.TypeOfFlightRangeId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-12">
                    <label asp-for="AirplaneModel.Description" class="form-label"></label>
                    <textarea asp-for="AirplaneModel.Description" class="form-control"> </textarea>
                </div>
            </div>
            <div class="row justify-content-start">
                <div class="col-4 col-md-3">
                    @if (Model.AirplaneModel.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">Обновить</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Создать</button>
                    }                    
                </div>
                <div class="col-4 col-md-3">
                    <a asp-controller="AirplaneModel" asp-action="Index" class="btn btn-secondary form-control">Вернуться</a>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}